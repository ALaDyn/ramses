This is the RAMSES parameter file for Sod's shock tube test.

&RUN_PARAMS
hydro=.true.
ncontrol=1
nremap=10
nsubcycle=1,1,1,1,1,1
nrestart=0
nstepmax = 1000000
/

&AMR_PARAMS 
levelmin=6
levelmax=16
ngridmax=9000
nexpand=1
boxlen=1.0
/

&BOUNDARY_PARAMS
nboundary=2
ibound_min=-1,+1
ibound_max=-1,+1
bound_type= 2,2
/


&INIT_PARAMS
nregion=2
region_type(1)='square'
region_type(2)='square'
x_center=0.25,0.75
length_x=0.5,0.5
d_region=10.0,1.0
u_region=0.0,0.0
p_region=13.6,1.0e-6
v_region=0.0,0.
w_region=0.0,0.
/



&OUTPUT_PARAMS
tend=0.45
delta_tout=0.045
/

&HYDRO_PARAMS
gamma=1.67
courant_factor=0.8
slope_type=1
riemann='hllc'
scheme='muscl'
/

&REFINE_PARAMS 
err_grad_d=0.1
err_grad_u=0.1
err_grad_p=0.1
interpol_var=0
interpol_type=2
/



