#############################################################################
# Makefile for visualisation software
#############################################################################
COMP = "GNU"

# GFORTRAN
ifeq ($(COMP),"GNU")
   F90 = gfortran
endif

# INTEL
ifeq ($(COMP),"INTEL")
   F90 = ifort
endif

LIST = amr2cube amr2cell amr2map

#############################################################################
all:	$(LIST)
#############################################################################
%:	%.f90
	$(F90) $< -o $@
#############################################################################
clean :
	rm -f $(LIST)
#############################################################################
