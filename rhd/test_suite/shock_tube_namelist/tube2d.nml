This is the RAMSES parameter file for Sod's shock tube test.

&RUN_PARAMS
hydro=.true.
ncontrol=1
nremap=10
nsubcycle=1,1,1,1,1,1
nrestart=0
nstepmax = 1000000
/

&AMR_PARAMS 
levelmin=8
levelmax=8
ngridmax=200000
nexpand=1
boxlen=1.0
/

&BOUNDARY_PARAMS
nboundary=4
ibound_min=0,0,-1,+1
ibound_max=0,0,-1,+1
jbound_min=-1,+1,-1,-1
jbound_max=-1,+1,+1,+1
bound_type= 2,2,2,2
/


&INIT_PARAMS
nregion=4
region_type(1)='square'
region_type(2)='square'
region_type(3)='square'
region_type(4)='square'
y_center=0.75,0.75,0.25,0.25
x_center=0.25,0.75,0.25,0.75
length_x=0.5,0.5,0.5,0.5
length_y=0.5,0.5,0.5,0.5
d_region=.1  ,.1  ,0.5,0.1
u_region=0.99,0.  ,0.,0.
v_region=0.0 ,0.  ,0.,0.99
w_region=0.0 ,0.  ,0.,0.
p_region=1.0 ,0.01,1.,1.
exp_region=10.,10.,10.,10.
/



&OUTPUT_PARAMS
tend=0.4
delta_tout=0.04
/

&HYDRO_PARAMS
gamma=1.67
courant_factor=0.8
slope_type=1
riemann='hllc'
scheme='muscl'
/

&REFINE_PARAMS 
err_grad_d=0.1
err_grad_u=0.1
err_grad_p=0.1
interpol_var=0
interpol_type=2
/



