This is the RAMSES parameter file for Sod's shock tube test.

&RUN_PARAMS
hydro=.true.
ncontrol=1
nremap=10
nsubcycle=1,1,1,1,1,1
nrestart=0
nstepmax = 1000000
/

&AMR_PARAMS 
levelmin=8
levelmax=8
ngridmax=200000
nexpand=1
boxlen=1.0
/

&BOUNDARY_PARAMS
nboundary=4
ibound_min=0,0,-1,+1
ibound_max=0,0,-1,+1
jbound_min=-1,+1,-1,-1
jbound_max=-1,+1,+1,+1
bound_type= 2,2,2,2
/


&INIT_PARAMS
/



&OUTPUT_PARAMS
tend=0.4
delta_tout=0.04
/

&HYDRO_PARAMS
gamma=1.67
courant_factor=0.8
slope_type=1
riemann='hllc'
scheme='muscl'
/

&REFINE_PARAMS 
err_grad_d=0.1
err_grad_u=0.1
err_grad_p=0.1
interpol_var=0
interpol_type=2
/



