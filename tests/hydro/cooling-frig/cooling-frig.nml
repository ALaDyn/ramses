This is the RAMSES parameter file for the cooling-frig test.

&RUN_PARAMS
hydro=.true.
/

&AMR_PARAMS
levelmin=5
levelmax=5
ngridmax=10000
boxlen=500
/

&HYDRO_PARAMS
gamma=1.666667
courant_factor=0.8
scheme='muscl'
slope_type=1
riemann='hllc'
pressure_fix=.true.
beta_fix=0.5
/

&INIT_PARAMS
nregion=1
region_type='square'
x_center=250
y_center=250
z_center=250
length_x=500
length_y=500
length_z=500
exp_region=10
d_region=1      ! 1 cm-3
p_region=319266 ! 8000 K
/

&OUTPUT_PARAMS
noutput=2
tout=0.0,0.62  ! 100Myr
/

&UNITS_PARAMS
units_density=2.3247434d-24
units_time=2.5395079d15
units_length=3.0857d18
/

&COOLING_PARAMS
isothermal=.false.
cooling=.true.
cooling_ism=.true.
mu_gas=1.4d0
z_ave=1.0
/

&TURB_PARAMS
turb=.true.
turb_type=1
turb_seed=1
comp_frac=0.5 
instant_turb=.true.
forcing_power_spectrum='power_law'
turb_T=0.5
turb_Ndt=100
turb_rms=3000
turb_min_rho=1d-2
/
