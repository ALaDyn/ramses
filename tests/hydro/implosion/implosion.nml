This is the RAMSES parameter file for Sod's shock tube test.

&RUN_PARAMS
hydro=.true.
nsubcycle=10*2
ncontrol=10
/

&AMR_PARAMS
levelmin=5
levelmax=8
ngridmax=100000
nexpand=4
boxlen=1.0
/

&BOUNDARY_PARAMS
nboundary=4
bound_type= 1, 1, 1, 1
ibound_min=-1,+1,-1,-1
ibound_max=-1,+1,+1,+1
jbound_min= 0, 0,+1,-1
jbound_max= 0, 0,+1,-1
/

&INIT_PARAMS
nregion=2
region_type='square','square'
exp_region=10,1
x_center=0.5,0.0
y_center=0.5,0.0
length_x=1.0,1.0
length_y=1.0,1.0
d_region=1.0,0.125
u_region=0.0,0.0
p_region=1.0,0.4
/

&OUTPUT_PARAMS
noutput=2
tout=0.0,5.0
/

&HYDRO_PARAMS
gamma=1.4
courant_factor=0.8
slope_type=2
riemann='hllc'
/

&REFINE_PARAMS
err_grad_d=0.05
err_grad_u=0.05
err_grad_p=0.05
interpol_var=0
interpol_type=2
/



