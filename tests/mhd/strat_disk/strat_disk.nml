&RUN_PARAMS
hydro=.true.
poisson=.true.
ncontrol=1
/

&AMR_PARAMS
levelmin=5
levelmax=5
ngridmax=5000
boxlen=1000
/

&BOUNDARY_PARAMS
/

&POISSON_PARAMS
gravity_type=3
gravity_params=1.42d-3, 5.49d-4, 0.18d3 ! a1, a2, z0
/

&HYDRO_PARAMS
gamma=1.666667
courant_factor=0.8
scheme='muscl'
slope_type=1
riemann='hlld'
riemann2d='hlld'
pressure_fix=.true.
beta_fix=0.5
!smallr=0.0001
/

&INIT_PARAMS
/

&OUTPUT_PARAMS
delta_tout=0.062
tend=0.620
!tend=0.01 !0.124 = 10Myr
/

&UNITS_PARAMS
units_density=2.3247434d-24 ! mu * 1.66e-24, where mu = 1.4
units_time = 2.5395079d15 ! 1/sqrt(G * units_density)
units_length=3.0857d18
/

&COOLING_PARAMS
cooling=.true.
mu_gas=1.4d0
/

