! Uniform density 10 H/cc, uniform T=10 initially
! 1 massive sink in the middle (id=6)
! 5 additional low mass sinks around to verify SN is done on the correct sink
! initially 2 sinks close together which merge before stellar particle is born (sink_id != isink)
! Initial dmf = initial mass
! TODO: make work on 4 cpus

&RUN_PARAMS
hydro=.true.
nrestart=0
nremap=10
poisson=.true.
rt=.true.
pic=.true.
sink=.true.
stellar=.true.
nsubcycle=1,1
verbose=.false.
/

&INIT_PARAMS
nregion=1
region_type(1)='square'
x_center=125
y_center=125
z_center=125
length_x=250
length_y=250
length_z=250
exp_region=10.0
d_region=1d1		   	  ! 10 hydrogen atoms per cc
p_region=3300.1987634209013
/

&AMR_PARAMS
levelmin=6
levelmax=7
ngridmax=350000
npartmax=50000
nexpand=4,4,4,4,4
boxlen=250. ! pc
/

&OUTPUT_PARAMS
tend=0.18
/

&HYDRO_PARAMS
gamma=1.666666667
courant_factor=0.8
riemann='hllc'
slope_type=1
pressure_fix=.true.
beta_fix=0.5
/

&COOLING_PARAMS
cooling=.false.
metal=.false.
z_ave=1.0
/

&UNITS_PARAMS
units_density = 1.66d-24 ! 1 H/cc
units_time    = 3.004683525921981d15 !95.21470899675022 Myr
units_length  = 3.08567758128200d18 ! 1 pc
/

&REFINE_PARAMS
jeans_refine=8,8,8
interpol_type=0
interpol_var=1
sink_refine=.true.
/

&POISSON_PARAMS
gravity_type=0
/

&SINK_PARAMS
create_sinks=.false.
nsinkmax=10
mass_sink_seed=1 ! in M_sun
accretion_scheme='bondi'
merging_timescale=1d50
n_sink=1d2 ! ramses doens't like it if you don't set this
/

&STELLAR_PARAMS
sn_feedback_sink=.false.
nstellarmax=10
stellar_msink_th=300. ! threshold for stellar obj creation
sn_direct=.false.
mstellarini=100,100,100,100,100,100
! IMF
imf_index=-2.35
imf_low=8
imf_high=120
! Stellar lifetime model
lt_a=0.23840797
lt_b=2.20522946
lt_m0=148.158972
lt_t0=3.26515722
! HII lifetime (for HII emittion?)
hii_t=1000.0 ! Myr
/

&RT_PARAMS
rt_sink=.true.
X=0.76d0
Y=0.24d0
rt_output_coolstats=.true.
rt_flux_scheme='glf'
rt_smooth=.true.
rt_courant_factor=0.8
rt_c_fraction=1d-6
rt_otsa=.false.
/

! RT only initialised in half the box??
&RT_GROUPS
group_csn(1,:)= 3.8808E-18, 7.6280E-22, 0.0000
group_cse(1,:)= 3.6627E-18, 1.1054E-21, 0.0000
group_csn(2,:)= 8.9878E-19, 6.1154E-18, 0.0000
group_cse(2,:)= 8.7025E-19, 5.9879E-18, 0.0000
group_csn(3,:)= 1.0528E-19, 1.5058E-18, 1.3239E-18
group_cse(3,:)= 1.0448E-19, 1.4969E-18, 1.3173E-18
group_egy     = 16.970, 28.161, 57.638
spec2group    = 1, 2, 3
/

